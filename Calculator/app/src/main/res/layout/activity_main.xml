<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <EditText
        android:layout_width="match_parent"
        android:layout_height="80dp"
        android:id="@+id/playET"
        android:background="#000000"
        android:textColor="#FFFFFF"
        android:textSize="60dp"
        android:gravity="right"
        android:singleLine="true"/>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/clear"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="AC"
            android:textSize="30dp" />

        <Button
            android:id="@+id/delete"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="Del"
            android:textSize="30dp" />

        <Button
            android:id="@+id/percent"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="%"
            android:textSize="30dp" />

        <Button
            android:id="@+id/devide"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#FFA500"
            android:text="รท"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/seven"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="7"
            android:textSize="30dp" />/>

        <Button
            android:id="@+id/eight"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="8"
            android:textSize="30dp" />

        <Button
            android:id="@+id/nine"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="9"
            android:textSize="30dp" />

        <Button
            android:id="@+id/multiply"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#FFA500"
            android:text="ร"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/four"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="4"
            android:textSize="30dp" />/>

        <Button
            android:id="@+id/five"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="5"
            android:textSize="30dp" />

        <Button
            android:id="@+id/six"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="6"
            android:textSize="30dp" />

        <Button
            android:id="@+id/minus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#FFA500"
            android:text="-"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/one"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="1"
            android:textSize="30dp" />/>

        <Button
            android:id="@+id/two"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="2"
            android:textSize="30dp" />

        <Button
            android:id="@+id/three"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="3"
            android:textSize="30dp" />

        <Button
            android:id="@+id/plus"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#FFA500"
            android:text="+"
            android:textSize="30dp" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="86dp"
        android:orientation="horizontal">

        <Button
            android:id="@+id/zero"
            android:layout_width="180dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:layout_marginLeft="15dp"
            android:text="0"
            android:textSize="30dp" />

        <Button
            android:id="@+id/dot"
            android:layout_width="90dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:text="."
            android:textSize="30dp" />

        <Button
            android:id="@+id/equal"
            android:layout_width="80dp"
            android:layout_height="80dp"
            android:layout_gravity="center"
            android:background="#FFA500"
            android:text="="
            android:textSize="30dp" />
    </LinearLayout>

</LinearLayout>
